package data;
import java.util.Scanner;

public class DataStore {
	DataStore dataStore;
	
	
	Computer[] store= new Computer[100];
	Scanner input=new Scanner(System.in);
	int compNumber=0;
	
	public Computer create() {
		System.out.println("Podaj producenta");
		String producent=input.nextLine();
		System.out.println("Podaj model");
		int model=input.nextInt();
		input.nextLine();
		input.close();
		return new Computer(producent, model);
		
	}
	
	public void add() {
		Computer comp=dataStore.create();
		store[compNumber]=comp;	
	}
	
	public void storeInfo() {
		for(int i=0; i<=compNumber; i++) {
			store[i].toString();
		}
	}
	
	public void checkAvailability() {
		int duplicates=0;
		Computer comp=dataStore.create();
		for(int i=0; i<compNumber; i++) {
			if (store[i].equals(comp)) {
				duplicates++;
			}
		System.out.println("Liczba komputerow: "+duplicates);		
		}
		
	}

}
